{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wshadow",
                "-Wunreachable-code",
                "-Wredundant-decls",
                "-Wmissing-declarations",
                "-Wold-style-definition",
                "-Wmissing-prototypes",
                "-Wdeclaration-after-statement",
                "bstat.c -o bstat",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
        }
    ]
}

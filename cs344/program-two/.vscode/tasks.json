    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Rooms",
            "type": "shell",
            "command": "make room",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Make Adventure",
            "type": "shell",
            "command": "make adventure",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Valgrind Rooms",
            "type": "shell",
            "command": "valgrind ${workspaceRoot}/rooms.out",
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Valgrind Adventure",
            "type": "shell",
            "command": "valgrind ${workspaceRoot}/adventure.out",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        }
    ]
}
